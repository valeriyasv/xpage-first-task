header.main-header
  .wrapper
    .main-header__inner
      .main-header__btns
        button(aria-label="Предложить новость").btn.main-header__button Предложить новость
        .main-header__burger
          button(aria-label='Открыть меню').main-header__toggle
            img(src='img/icons/burger.png', alt='Меню' width='22' height='22').main-header__burger-img
      .main-header__interact
        a(href='tel:+73513651711' aria-label='Позвонить по номеру: +73513651711').main-header__contact 8 (3513) 65-17-11
        a(href='#' aria-label='Поиск')
          svg(width='18' height='18')
            use(xlink:href="../img/sprite.svg#icon-search")
